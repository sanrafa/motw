        FOR select FULL
        FOR create, update, delete NONE;

DEFINE FIELD name ON TABLE minion_type TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD motivation ON TABLE minion_type TYPE string ASSERT $value IS NOT NONE;

