// Validation table for Expert havens
REMOVE TABLE haven;
DEFINE TABLE haven SCHEMAFULL
    PERMISSIONS
        FOR select FULL
        FOR create, update, delete NONE;

DEFINE FIELD name ON TABLE haven TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD desc ON TABLE haven TYPE string ASSERT $value IS NOT NONE;

