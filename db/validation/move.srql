/// HUNTER MOVE VALIDATION TABLE
///// Available Hunter moves
REMOVE TABLE move;
DEFINE TABLE move SCHEMAFULL
    PERMISSIONS
        FOR select, create FULL
        FOR update, delete WHERE owner = $auth.id;

DEFINE FIELD playbook ON TABLE move TYPE record(playbook) VALUE NONE OR $after;

DEFINE FIELD title ON TABLE move TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD desc ON TABLE move TYPE string ASSERT $value IS NOT NONE; -- in HTML for easier formatting

DEFINE FIELD outcomes ON TABLE move TYPE object;
    DEFINE FIELD outcomes.miss ON TABLE move TYPE string; -- 0-6
    DEFINE FIELD outcomes.poor ON TABLE move TYPE string; -- 7-9
    DEFINE FIELD outcomes.good ON TABLE move TYPE string; -- 10+
    DEFINE FIELD outcomes.excellent ON TABLE move TYPE string; -- 12+ & advanced

DEFINE FIELD holds ON TABLE move TYPE array VALUE NONE OR $after;
    DEFINE FIELD holds.* ON TABLE move;

DEFINE FIELD rating ON TABLE move TYPE string ASSERT $value IS NULL OR $value INSIDE ["charm", "cool", "sharp", "tough", "weird"];

DEFINE FIELD trigger_on_start ON TABLE move TYPE bool VALUE false OR $after;

DEFINE FIELD owner ON TABLE move TYPE record(user) VALUE NONE OR $after;

DEFINE TABLE custom_move AS 
    SELECT * FROM move WHERE owner IS NOT NONE
    PERMISSIONS
        FOR create FULL
        FOR select, update, delete WHERE owner = $auth.id;

CREATE move:act CONTENT {
    title: "Act Under Pressure",
    desc: "Any difficult or dangerous action that isn't covered by another move.",
    outcomes: {
        miss: "Things go to hell.",
        poor: "You'll receive a negative outcome, hard choice, or there'll be a price to pay.",
        good: "You do what you set out to do.",
        excellent: "You rise above the pressure completely. You may choose to either do what you wanted and something extra, or to do what you wanted to absolute perfection (to the point that people will talk about it for years to come).",
    },
    rating: "cool"
};

CREATE move:help CONTENT {
    title: "Help Out",
    desc: "Help another hunter do something. If you succeed, they'll receive a bonus on their task.",
    outcomes: {
        miss: "You expose yourself to trouble or danger, without helping.",
        poor: "The hunter you're helping receives +1 to their roll, but you expose yourself to trouble or danger.",
        good: "The hunter you're helping receives +1 to their roll.",
        excellent: "You make the difference. The person you are helping acts as if they just rolled a 12 on their move, regardless of what they actually got.",
    },
    rating: "cool"
};

CREATE move:investigate CONTENT {
    title: "Investigate a Mystery",
    desc: "Work out what kind of monster you're dealing with, what it can do, and what it's planning.",
    outcomes: {
        miss: "You reveal some information to the monster or whoever you're talking to. If the Keeper asks you questions, you have to answer.",
        poor: "Ask 1 question.",
        good: "Ask 2 questions.",
        excellent: "You may ask the Keeper any question you want about the mystery, not just those specified.",
    },
    holds: ["What happened here?", "What sort of creature is it?", "What can it do?", "What can hurt it?", "Where did it go?", "What was it going to do?", "What is being concealed here?"],
    rating: "sharp"
};

CREATE move:kickass CONTENT {
    title: "Kick Some Ass",
    desc: "Fighting. Monsters, mainly (but not always).",
    outcomes: {
        miss: "You get your ass kicked instead.",
        poor: "You kick some ass, but your ass is kicked back.",
        good: "You kick some ass, and get an extra effect.",
        excellent: "You devastate and overawe your enemy. You inflict and suffer harm as normal, and get to pick an enhanced effect.",
    },
    rating: "tough"
};

CREATE move:manipulate CONTENT {
    title: "Manipulate Someone",
    desc: "Try to get someone to do something for you, after giving them some kind of reason.",
    outcomes: {
        miss: "Your approach was completely wrong: you offend or anger the target.",
        poor: "They'll do it, but you have to do something for them right now to show that you mean it.",
        good: "They'll do it as long as you keep your word.",
        excellent: "You absolutely convince them. They do what you want RIGHT NOW.",
    },
    rating: "charm"
};

CREATE move:protect CONTENT {
    title: "Protect Someone",
    desc: "Save someone from danger.",
    outcomes: {
        miss: "You end up making things worse.",
        poor: "You protect them, but you'll suffer some or all of the harm they would've gotten.",
        good: "You protect them, and get an extra.",
        excellent: "You defend your target perfectly. Both you and the person you're protecting are unharmed and out of danger. If you were protecting a bystander, they also become your ally (pick a type for them as if you had taken the 'gain an ally' improvement - see Improvements section in the rulebook).",
    },
    rating: "tough"
};

CREATE move:readsituation CONTENT {
    title: "Read a Bad Situation",
    desc: "Figure out what dangers are immediately threatening you. Wondering if you're walking into a trap? Need tactical data?",
    outcomes: {
        miss: "You misread the situation, or end up revealing tactical details to your enemies.",
        poor: "Ask 1 question.",
        good: "Ask 3 questions.",
        excellent: "You may ask the Keeper any question you want about the situation, not just those specified.",
    },
    holds: ["What's my best way in?", "What's my best way out?", "Are there any dangers we haven't noticed?", "What's the biggest threat?", "What's most vulnerable to me?", "What's the best way to protect the victims?"],
    rating: "sharp"
};

CREATE move:usemagic CONTENT {
    title: "Use Magic",
    desc: "Cast magic spells or use enchanted items.",
    outcomes: {
        miss: "You lose control of the magic. That never ends well.",
        poor: "The magic worked, but with problems. Choose an effect, the Keeper will choose a glitch.",
        good: "The magic worked without issues. Choose your effect.",
        excellent: "You are infused with magical power. What you wanted to do happens and the Keeper must offer you some extra benefit on top of that.",
