// Location type validation table
REMOVE TABLE location_type;
DEFINE TABLE location_type SCHEMAFULL
    PERMISSIONS
        FOR select FULL
        FOR create, update, delete NONE;

DEFINE FIELD name ON TABLE location_type TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD motivation ON TABLE location_type TYPE string ASSERT $value IS NOT NONE;

