/// MONSTER ARCHETYPE VALIDATION TABLE
///// Validation table of available monster playbooks

DEFINE TABLE monster_type SCHEMAFULL
    PERMISSIONS
        FOR select FULL
        FOR create, update, delete NONE;

DEFINE FIELD name ON TABLE monster_type TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD motivation ON TABLE monster_type TYPE string ASSERT $value IS NOT NONE;

