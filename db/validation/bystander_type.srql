        FOR create, update, delete NONE;

DEFINE FIELD name ON TABLE bystander_type TYPE string ASSERT $value IS NOT NONE;

DEFINE FIELD motivation ON TABLE bystander_type TYPE string ASSERT $value IS NOT NONE;

